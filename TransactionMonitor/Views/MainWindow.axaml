<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TransactionMonitor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="600"
        x:Class="TransactionMonitor.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="TransactionMonitor"
        WindowState="Normal"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterScreen">
       
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Border
        CornerRadius="20">
        <ListBox
            Margin="0"
            Items="{Binding TokensList}">
           <ListBox.ItemTemplate>
               <DataTemplate>
                   <StackPanel>
                       <TextBlock Text="{Binding Path=Name_token}"/>
                       <TextBlock Text="{Binding Path=Balance}"/>
                   </StackPanel>
               </DataTemplate>
           </ListBox.ItemTemplate>
        </ListBox>
    </Border>
</Window>
